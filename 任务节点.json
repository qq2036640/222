{
  "任务配置说明": "测试工具任务流程配置，用于自动解析诈骗案件案情并输出结构化结果",
  "版本": "1.0",
  "创建日期": "2026-02-08",
  "适用场景": "诈骗案件智能分析系统",
  "任务节点": [
    {
      "id": "task_1",
      "名称": "案情文本接收",
      "类型": "输入任务",
      "说明": "接收并预处理案件案情文本",
      "输入字段": ["案情文本"],
      "输出字段": ["处理后文本"],
      "依赖": [],
      "执行顺序": 1
    },
    {
      "id": "task_2",
      "名称": "嫌疑人信息提取",
      "类型": "提取任务",
      "说明": "从案情文本中提取所有嫌疑人姓名和人数",
      "输入字段": ["处理后文本"],
      "输出字段": ["嫌疑人列表", "嫌疑人人数"],
      "提取规则": {
        "方法": "自然语言处理+关键词匹配",
        "关键词": ["被告人", "嫌疑人", "犯罪人", "行为人"],
        "输出格式": "列表形式，如：['张三', '李四', '王五']"
      },
      "依赖": ["task_1"],
      "执行顺序": 2
    },
    {
      "id": "task_3",
      "名称": "角色判定",
      "类型": "判定任务",
      "说明": "判定每名嫌疑人在共同犯罪中的角色",
      "输入字段": ["嫌疑人列表", "处理后文本"],
      "输出字段": ["角色判定结果"],
      "判定规则": {
        "主犯": "组织、领导犯罪活动；在共同犯罪中起主要作用",
        "从犯": "在共同犯罪中起次要或辅助作用",
        "胁从犯": "被胁迫参加犯罪"
      },
      "输出格式": {
        "嫌疑人": "角色",
        "示例": {"张三": "主犯", "李四": "从犯"}
      },
      "依赖": ["task_2"],
      "执行顺序": 3
    },
    {
      "id": "task_4",
      "名称": "犯罪主体验证",
      "类型": "验证任务",
      "说明": "逐个验证嫌疑人是否具备犯罪主体资格",
      "输入字段": ["嫌疑人列表", "处理后文本"],
      "输出字段": ["主体验证结果"],
      "验证条件": [
        "年龄>=16周岁",
        "具有刑事责任能力",
        "自然人或单位"
      ],
      "输出格式": {
        "嫌疑人": "是否适格",
        "示例": {"张三": true, "李四": true}
      },
      "依赖": ["task_2"],
      "执行顺序": 4
    },
    {
      "id": "task_5",
      "名称": "犯罪客体验证",
      "类型": "验证任务",
      "说明": "验证是否侵犯了公私财产所有权",
      "输入字段": ["处理后文本"],
      "输出字段": ["客体验证结果"],
      "验证条件": [
        "存在财产权利被侵犯",
        "存在实际财产损失"
      ],
      "输出格式": {
        "侵犯客体": "boolean",
        "损失金额": "number"
      },
      "依赖": ["task_1"],
      "执行顺序": 5
    },
    {
      "id": "task_6",
      "名称": "主观方面验证",
      "类型": "验证任务",
      "说明": "逐个验证嫌疑人主观方面（非法占有目的、明知故意）",
      "输入字段": ["嫌疑人列表", "处理后文本"],
      "输出字段": ["主观方面验证结果"],
      "验证条件": [
        "具有非法占有目的",
        "明知是诈骗行为",
        "故意心态"
      ],
      "输出格式": {
        "嫌疑人": "是否具有主观故意",
        "示例": {"张三": true, "李四": true}
      },
      "依赖": ["task_2"],
      "执行顺序": 6
    },
    {
      "id": "task_7",
      "名称": "客观方面验证",
      "类型": "验证任务",
      "说明": "验证是否实施了诈骗客观行为",
      "输入字段": ["处理后文本"],
      "输出字段": ["客观行为验证结果"],
      "验证条件": [
        "虚构事实或隐瞒真相",
        "被害人产生错误认识",
        "被害人基于错误认识处分财产",
        "嫌疑人获取财产",
        "被害人遭受损失"
      ],
      "输出格式": {
        "实施诈骗行为": "boolean",
        "行为描述": "string"
      },
      "依赖": ["task_1"],
      "执行顺序": 7
    },
    {
      "id": "task_8",
      "名称": "诈骗数额确定",
      "类型": "提取任务",
      "说明": "提取并计算诈骗总金额及各嫌疑人涉案金额",
      "输入字段": ["嫌疑人列表", "处理后文本"],
      "输出字段": ["总金额", "各嫌疑人涉案金额"],
      "数额标准": {
        "数额较大": "3000-30000元",
        "数额巨大": "30000-500000元",
        "数额特别巨大": ">=500000元"
      },
      "输出格式": {
        "总金额": "number",
        "各人金额": {"张三": 50000, "李四": 30000}
      },
      "依赖": ["task_2"],
      "执行顺序": 8
    },
    {
      "id": "task_9",
      "名称": "其他情节识别",
      "类型": "提取任务",
      "说明": "识别加重或减轻情节",
      "输入字段": ["处理后文本", "嫌疑人列表"],
      "输出字段": ["加重情节", "减轻情节"],
      "情节类型": {
        "加重": ["电信网络诈骗", "针对特殊群体", "跨境诈骗", "诈骗集团", "累犯", "多次诈骗"],
        "减轻": ["自首", "坦白", "立功", "退赃退赔", "从犯", "未遂", "中止"]
      },
      "输出格式": {
        "各人加重情节": {"张三": ["电信网络诈骗"]},
        "各人减轻情节": {"李四": ["自首", "退赃"]}
      },
      "依赖": ["task_2"],
      "执行顺序": 9
    },
    {
      "id": "task_10",
      "名称": "构成要件综合判定",
      "类型": "判定任务",
      "说明": "综合四要件判定各嫌疑人是否构成诈骗罪",
      "输入字段": [
        "主体验证结果",
        "客体验证结果",
        "主观方面验证结果",
        "客观行为验证结果",
        "总金额"
      ],
      "输出字段": ["各嫌疑人构成判定"],
      "判定逻辑": "主体适格 AND 客体侵犯 AND 主观故意 AND 客观行为 AND (数额达标 OR 情节严重)",
      "输出格式": {
        "嫌疑人": "是否构成诈骗罪",
        "示例": {"张三": true, "李四": true}
      },
      "依赖": ["task_4", "task_5", "task_6", "task_7", "task_8"],
      "执行顺序": 10
    },
    {
      "id": "task_11",
      "名称": "基准刑计算",
      "类型": "计算任务",
      "说明": "根据诈骗数额计算各嫌疑人基准刑期",
      "输入字段": ["各嫌疑人涉案金额", "各嫌疑人构成判定"],
      "输出字段": ["各嫌疑人基准刑"],
      "计算规则": {
        "数额较大": "三年以下有期徒刑、拘役或者管制",
        "数额巨大": "三年以上十年以下有期徒刑",
        "数额特别巨大": "十年以上有期徒刑或者无期徒刑"
      },
      "输出格式": {
        "嫌疑人": {"基准刑下限": "月", "基准刑上限": "月"},
        "示例": {"张三": {"基准刑下限": 36, "基准刑上限": 60}}
      },
      "依赖": ["task_8", "task_10"],
      "执行顺序": 11
    },
    {
      "id": "task_12",
      "名称": "情节调整计算",
      "类型": "计算任务",
      "说明": "根据加重减轻情节调整刑期",
      "输入字段": ["各嫌疑人基准刑", "加重情节", "减轻情节"],
      "输出字段": ["情节调整后刑期"],
      "调整规则": {
        "自首": "基准刑*0.7-0.9",
        "立功": "基准刑*0.7-0.9",
        "退赃退赔": "基准刑*0.9-0.95",
        "累犯": "基准刑*1.1-1.3",
        "电信网络诈骗": "基准刑*1.1-1.2"
      },
      "输出格式": {
        "嫌疑人": {"调整后下限": "月", "调整后上限": "月"},
        "示例": {"张三": {"调整后下限": 40, "调整后上限": 66}}
      },
      "依赖": ["task_9", "task_11"],
      "执行顺序": 12
    },
    {
      "id": "task_13",
      "名称": "角色调整计算",
      "类型": "计算任务",
      "说明": "根据主从犯角色进一步调整量刑",
      "输入字段": ["情节调整后刑期", "角色判定结果"],
      "输出字段": ["最终量刑建议"],
      "调整规则": {
        "主犯": "按全部犯罪处罚",
        "从犯": "减轻20%-50%",
        "胁从犯": "减轻50%或免除处罚"
      },
      "输出格式": {
        "嫌疑人": {"刑期下限": "月", "刑期上限": "月", "罚金": "元"},
        "示例": {"张三": {"刑期下限": 40, "刑期上限": 66, "罚金": 50000}, "李四": {"刑期下限": 20, "刑期上限": 33, "罚金": 30000}}
      },
      "依赖": ["task_3", "task_12"],
      "执行顺序": 13
    },
    {
      "id": "task_14",
      "名称": "结果汇总输出",
      "类型": "输出任务",
      "说明": "汇总所有分析结果并生成结构化输出",
      "输入字段": [
        "嫌疑人列表",
        "嫌疑人人数",
        "角色判定结果",
        "各嫌疑人构成判定",
        "最终量刑建议"
      ],
      "输出字段": ["完整分析报告"],
      "输出结构": {
        "案件基本信息": {
          "嫌疑人人数": "number",
          "嫌疑人列表": ["string"]
        },
        "各嫌疑人分析结果": [
          {
            "姓名": "string",
            "角色": "主犯/从犯/胁从犯",
            "构成诈骗罪": "boolean",
            "构成要件判定": {
              "主体适格": "boolean",
              "客体侵犯": "boolean",
              "主观故意": "boolean",
              "客观行为": "boolean",
              "数额达标": "boolean"
            },
            "量刑建议": {
              "刑期下限": "月",
              "刑期上限": "月",
              "罚金": "元",
              "建议刑种": "有期徒刑/拘役/管制"
            }
          }
        ],
        "法律依据": ["string"]
      },
      "依赖": ["task_2", "task_3", "task_10", "task_13"],
      "执行顺序": 14
    }
  ],
  "执行流程说明": {
    "阶段1": "输入处理阶段（task_1）",
    "阶段2": "信息提取阶段（task_2, task_3, task_8, task_9）",
    "阶段3": "要件验证阶段（task_4, task_5, task_6, task_7）",
    "阶段4": "构成判定阶段（task_10）",
    "阶段5": "量刑计算阶段（task_11, task_12, task_13）",
    "阶段6": "结果输出阶段（task_14）"
  },
  "依赖关系验证": {
    "无循环依赖": "所有任务依赖形成有向无环图（DAG）",
    "无自环": "任务不依赖自身",
    "依赖有效性": "所有依赖的任务ID必须存在"
  }
}
