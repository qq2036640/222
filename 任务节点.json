{
  "任务声明": {
    "任务名称": "诈骗罪判定与量刑智能系统",
    "任务描述": "基于案件事实自动识别嫌疑人，判定主从犯角色，审查诈骗罪构成要件，计算量刑建议，生成结构化输出",
    "主案由": "诈骗罪",
    "适用法律": "中华人民共和国刑法第266条",
    "版本": "1.0",
    "生效时间": "2022-03-01"
  },
  "核心任务节点清单": [
    {
      "id": "task_001",
      "名称": "案情导入",
      "类型": "提取",
      "描述": "接收并解析案件基础信息",
      "输入": ["原始案情描述"],
      "输出": ["案情文本", "案发时间", "案发地点"],
      "依赖": [],
      "法律依据": {
        "法律名称": "中华人民共和国刑事诉讼法",
        "条款": "第50条",
        "原文": "审判人员、检察人员、侦查人员必须依照法定程序，收集能够证实犯罪嫌疑人、被告人有罪或者无罪、犯罪情节轻重的各种证据。",
        "说明": "案件事实是定罪量刑的基础"
      }
    },
    {
      "id": "task_002",
      "名称": "嫌疑人抽取",
      "类型": "提取",
      "描述": "从案情中识别并提取所有涉案嫌疑人信息",
      "输入": ["案情文本"],
      "输出": ["嫌疑人列表", "嫌疑人人数"],
      "依赖": ["task_001"],
      "提取规则": {
        "识别关键词": ["被告人", "犯罪嫌疑人", "行为人"],
        "提取字段": ["姓名", "年龄", "性别"]
      },
      "法律依据": {
        "法律名称": "中华人民共和国刑法",
        "条款": "第25条",
        "原文": "共同犯罪是指二人以上共同故意犯罪。"
      }
    },
    {
      "id": "task_003",
      "名称": "角色判定",
      "类型": "判定",
      "描述": "判定各嫌疑人在共同犯罪中的角色",
      "输入": ["嫌疑人列表", "案情文本"],
      "输出": ["主犯列表", "从犯列表"],
      "依赖": ["task_002"],
      "判定条件": {
        "主犯标准": ["组织策划", "起主要作用", "积极实施"],
        "从犯标准": ["起次要作用", "辅助作用", "被动参与"]
      },
      "法律依据": {
        "法律名称": "中华人民共和国刑法",
        "条款": "第26条、第27条",
        "原文": "《中华人民共和国刑法》第二十六条【主犯】组织、领导犯罪集团进行犯罪活动的或者在共同犯罪中起主要作用的，是主犯。第二十七条【从犯】在共同犯罪中起次要或者辅助作用的，是从犯。对于从犯，应当从轻、减轻处罚或者免除处罚。"
      }
    },
    {
      "id": "task_004",
      "名称": "主体要件核验",
      "类型": "判定",
      "描述": "审查嫌疑人是否具备刑事责任能力",
      "输入": ["嫌疑人列表"],
      "输出": ["主体适格结果"],
      "依赖": ["task_002"],
      "核验标准": {
        "刑事责任年龄": 16,
        "精神状态": "正常",
        "特殊情形": ["未满18周岁从宽", "精神病人不负刑责"]
      },
      "法律依据": {
        "法律名称": "中华人民共和国刑法",
        "条款": "第17条、第18条",
        "原文": "已满十六周岁的人犯罪，应当负刑事责任。精神病人在不能辨认或者不能控制自己行为的时候造成危害结果，经法定程序鉴定确认的，不负刑事责任。"
      }
    },
    {
      "id": "task_005",
      "名称": "客体要件核验",
      "类型": "判定",
      "描述": "审查犯罪行为是否侵犯公私财产所有权",
      "输入": ["案情文本"],
      "输出": ["客体侵犯结果"],
      "依赖": ["task_004"],
      "核验标准": {
        "侵犯对象": "公私财产所有权"
      },
      "法律依据": {
        "法律名称": "中华人民共和国刑法",
        "条款": "第266条",
        "原文": "诈骗罪侵犯的客体是公私财产所有权。"
      }
    },
    {
      "id": "task_006",
      "名称": "主观要件核验",
      "类型": "判定",
      "描述": "审查嫌疑人是否具有非法占有目的和欺诈故意",
      "输入": ["案情文本"],
      "输出": ["主观故意结果"],
      "依赖": ["task_005"],
      "核验标准": {
        "故意类型": "直接故意",
        "非法占有目的": true
      },
      "法律依据": {
        "法律名称": "中华人民共和国刑法",
        "条款": "第266条",
        "原文": "诈骗罪的主观方面表现为故意，并且具有非法占有公私财物的目的。"
      }
    },
    {
      "id": "task_007",
      "名称": "客观要件核验",
      "类型": "判定",
      "描述": "审查是否存在虚构事实、隐瞒真相的欺诈行为",
      "输入": ["案情文本"],
      "输出": ["客观行为结果"],
      "依赖": ["task_006"],
      "核验标准": {
        "欺诈行为": ["虚构事实", "隐瞒真相"],
        "行为结果": "被害人受骗并交付财物"
      },
      "法律依据": {
        "法律名称": "中华人民共和国刑法",
        "条款": "第266条",
        "原文": "诈骗罪客观方面表现为使用欺诈方法骗取数额较大的公私财物。"
      }
    },
    {
      "id": "task_008",
      "名称": "数额情节评估",
      "类型": "判定",
      "描述": "根据涉案金额和案发地区判定数额档次",
      "输入": ["涉案金额", "案发地区"],
      "输出": ["数额档次", "情节严重度"],
      "依赖": ["task_007"],
      "评估规则": {
        "浙江省": {
          "数额较大": 6000,
          "数额巨大": 100000,
          "数额特别巨大": 500000
        },
        "北京市": {
          "数额较大": 5000,
          "数额巨大": 100000,
          "数额特别巨大": 500000
        },
        "全国默认": {
          "数额较大": 3000,
          "数额巨大": 30000,
          "数额特别巨大": 500000
        }
      },
      "法律依据": {
        "法律名称": "最高人民法院、最高人民检察院关于办理诈骗刑事案件具体应用法律若干问题的解释",
        "条款": "法释〔2011〕7号第一条",
        "原文": "诈骗公私财物价值三千元至一万元以上、三万元至十万元以上、五十万元以上的，应当分别认定为刑法第二百六十六条规定的\"数额较大\"\"数额巨大\"\"数额特别巨大\"。各省、自治区、直辖市高级人民法院、人民检察院可以结合本地区经济社会发展状况，在前款规定的数额幅度内，共同研究确定本地区执行的具体数额标准，报最高人民法院、最高人民检察院备案。"
      }
    },
    {
      "id": "task_009",
      "名称": "基准刑计算",
      "类型": "判定",
      "描述": "根据数额档次确定基准刑期范围",
      "输入": ["数额档次"],
      "输出": ["基准刑期_月", "刑罚类型"],
      "依赖": ["task_008"],
      "计算规则": {
        "数额较大": {
          "刑期范围_月": [6, 18],
          "刑罚类型": ["有期徒刑", "拘役", "管制"]
        },
        "数额巨大": {
          "刑期范围_月": [36, 48],
          "刑罚类型": ["有期徒刑"]
        },
        "数额特别巨大": {
          "刑期范围_月": [120, 144],
          "刑罚类型": ["有期徒刑", "无期徒刑"]
        }
      },
      "法律依据": {
        "法律名称": "最高人民法院关于常见犯罪的量刑指导意见",
        "条款": "法发〔2021〕21号",
        "原文": "构成诈骗罪的，根据下列情形在相应的幅度内确定量刑起点：（1）达到数额较大起点的，在一年以下有期徒刑、拘役幅度内确定量刑起点。（2）达到数额巨大起点或者有其他严重情节的，在三年至四年有期徒刑幅度内确定量刑起点。（3）达到数额特别巨大起点或者有其他特别严重情节的，在十年至十二年有期徒刑幅度内确定量刑起点。依法应当判处无期徒刑的除外。"
      }
    },
    {
      "id": "task_010",
      "名称": "从犯系数调节",
      "类型": "判定",
      "描述": "对从犯适用减轻处罚系数",
      "输入": ["从犯列表", "基准刑期_月"],
      "输出": ["从犯调节系数"],
      "依赖": ["task_003", "task_009"],
      "调节范围": {
        "从犯调节系数_最小": -0.5,
        "从犯调节系数_最大": -0.2
      },
      "法律依据": {
        "法律名称": "中华人民共和国刑法",
        "条款": "第27条",
        "原文": "《中华人民共和国刑法》第二十七条【从犯】在共同犯罪中起次要或者辅助作用的，是从犯。对于从犯，应当从轻、减轻处罚或者免除处罚。"
      }
    },
    {
      "id": "task_011",
      "名称": "自首坦白系数调节",
      "类型": "判定",
      "描述": "评估自首或坦白情节并计算减轻系数",
      "输入": ["案情文本"],
      "输出": ["自首坦白调节系数"],
      "依赖": ["task_009"],
      "调节范围": {
        "自首调节系数_最小": -0.4,
        "自首调节系数_最大": 0,
        "坦白调节系数_最小": -0.2,
        "坦白调节系数_最大": 0
      },
      "法律依据": {
        "法律名称": "中华人民共和国刑法",
        "条款": "第67条",
        "原文": "《中华人民共和国刑法》第六十七条【自首】犯罪以后自动投案，如实供述自己的罪行的，是自首。对于自首的犯罪分子，可以从轻或者减轻处罚。其中，犯罪较轻的，可以免除处罚。犯罪嫌疑人虽不具有前两款规定的自首情节，但是如实供述自己罪行的，可以从轻处罚；因其如实供述自己罪行，避免特别严重后果发生的，可以减轻处罚。"
      }
    },
    {
      "id": "task_012",
      "名称": "退赃退赔系数调节",
      "类型": "判定",
      "描述": "评估退赃退赔情况并计算减轻系数",
      "输入": ["案情文本", "涉案金额"],
      "输出": ["退赃退赔调节系数", "退赃比例"],
      "依赖": ["task_009"],
      "调节范围": {
        "退赃比例30以下": -0.1,
        "退赃比例30至70_最小": -0.1,
        "退赃比例30至70_最大": -0.2,
        "退赃比例70以上_最小": -0.2,
        "退赃比例70以上_最大": -0.3
      },
      "法律依据": {
        "法律名称": "最高人民法院关于常见犯罪的量刑指导意见",
        "条款": "法发〔2021〕21号",
        "原文": "对于退赃、退赔的，综合考虑犯罪性质，退赃、退赔行为对损害结果所能弥补的程度，退赃、退赔的数额及主动程度等情况，可以减少基准刑的30%以下。"
      }
    },
    {
      "id": "task_013",
      "名称": "累犯系数调节",
      "类型": "判定",
      "描述": "判断是否构成累犯并计算从重系数",
      "输入": ["案情文本"],
      "输出": ["累犯调节系数", "是否累犯"],
      "依赖": ["task_009"],
      "调节范围": {
        "累犯调节系数_最小": 0.1,
        "累犯调节系数_最大": 0.4
      },
      "法律依据": {
        "法律名称": "中华人民共和国刑法",
        "条款": "第65条",
        "原文": "《中华人民共和国刑法》第六十五条【一般累犯】被判处有期徒刑以上刑罚的犯罪分子，刑罚执行完毕或者赦免以后，在五年以内再犯应当判处有期徒刑以上刑罚之罪的，是累犯，应当从重处罚，但是过失犯罪和不满十八周岁的人犯罪的除外。"
      }
    },
    {
      "id": "task_014",
      "名称": "最终刑期计算",
      "类型": "汇总",
      "描述": "综合基准刑和各项调节系数计算最终刑期",
      "输入": ["基准刑期_月", "从犯调节系数", "自首坦白调节系数", "退赃退赔调节系数", "累犯调节系数"],
      "输出": ["最终刑期_月", "最终刑期_文本"],
      "依赖": ["task_009", "task_010", "task_011", "task_012", "task_013"],
      "计算公式": "最终刑期_月 = 基准刑期_月 × (1 + 从犯调节系数 + 自首坦白调节系数 + 退赃退赔调节系数 + 累犯调节系数)"
    },
    {
      "id": "task_015",
      "名称": "缓刑审查",
      "类型": "判定",
      "描述": "审查是否符合缓刑适用条件",
      "输入": ["最终刑期_月", "是否累犯", "案情文本"],
      "输出": ["是否适用缓刑", "缓刑考验期_月"],
      "依赖": ["task_014"],
      "审查条件": {
        "刑期要求_月": 36,
        "排除条件": ["累犯", "犯罪集团首要分子"],
        "积极条件": ["犯罪情节较轻", "有悔罪表现", "无再犯危险", "无不良社区影响"]
      },
      "考验期范围": {
        "拘役_最小_月": 2,
        "拘役_最大_月": 12,
        "有期徒刑_最小_月": 12,
        "有期徒刑_最大_月": 60
      },
      "法律依据": {
        "法律名称": "中华人民共和国刑法",
        "条款": "第72条、第73条、第74条",
        "原文": "《中华人民共和国刑法》第七十二条【适用条件】对于被判处拘役、三年以下有期徒刑的犯罪分子，同时符合下列条件的，可以宣告缓刑，对其中不满十八周岁的人、怀孕的妇女和已满七十五周岁的人，应当宣告缓刑：（一）犯罪情节较轻；（二）有悔罪表现；（三）没有再犯罪的危险；（四）宣告缓刑对所居住社区没有重大不良影响。第七十四条【累犯不适用缓刑】对于累犯和犯罪集团的首要分子，不适用缓刑。"
      }
    },
    {
      "id": "task_016",
      "名称": "量刑建议生成",
      "类型": "汇总",
      "描述": "汇总所有量刑要素形成综合量刑建议",
      "输入": ["最终刑期_月", "最终刑期_文本", "是否适用缓刑", "缓刑考验期_月"],
      "输出": ["量刑建议"],
      "依赖": ["task_014", "task_015"]
    },
    {
      "id": "task_017",
      "名称": "结构化输出生成",
      "类型": "输出",
      "描述": "生成包含所有判定要素的结构化判决建议",
      "输入": ["嫌疑人列表", "主犯列表", "从犯列表", "主体适格结果", "客体侵犯结果", "主观故意结果", "客观行为结果", "数额档次", "量刑建议"],
      "输出": ["判决建议文本", "结构化结果"],
      "依赖": ["task_016"],
      "输出格式": {
        "嫌疑人信息": "包含姓名、角色、人数",
        "构成要件判定": "主体、客体、主观、客观四要件审查结果",
        "数额情节": "涉案金额、数额档次、情节严重度",
        "量刑建议": "基准刑、调节系数、最终刑期、缓刑建议",
        "法律依据": "引用的法律条文和司法解释"
      }
    }
  ],
  "任务执行流程": {
    "阶段一_案情分析": ["task_001", "task_002"],
    "阶段二_角色判定": ["task_003"],
    "阶段三_构成要件审查": ["task_004", "task_005", "task_006", "task_007"],
    "阶段四_数额情节评估": ["task_008"],
    "阶段五_量刑计算": ["task_009", "task_010", "task_011", "task_012", "task_013", "task_014"],
    "阶段六_缓刑审查": ["task_015"],
    "阶段七_结果输出": ["task_016", "task_017"]
  },
  "依赖关系验证": {
    "无自环": true,
    "无循环依赖": true,
    "单向推导链": true,
    "说明": "所有任务依赖关系均已验证，不存在自环或循环依赖，形成从案情导入到结果输出的单向推导链"
  }
}
